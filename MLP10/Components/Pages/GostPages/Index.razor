@page "/gosts"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using MLP10.Data
@using MLP10.Data
@implements IAsyncDisposable
@inject IDbContextFactory<MLP10.Data.ApplicationDbContext> DbFactory

<PageTitle>Гости</PageTitle>

<h1>Гости</h1>

<p>
    <a href="gosts/create">Добавить</a>
</p>

<QuickGrid Class="table" Items="context.Gosts">
    <PropertyColumn Title="Имя" Property="gost => gost.FirstName" />
    <PropertyColumn Title="Фамилия" Property="gost => gost.LastName" />
    <PropertyColumn Title="Дата рождения" Property="gost => gost.Birht" />
    <PropertyColumn Title="Паспорт" Property="gost => gost.Pasport" />
    <PropertyColumn Title="Телефон" Property="gost => gost.Phone" />

    <TemplateColumn Context="gost">
        <a href="@($"brons?id={gost.GostId}&op=2")">Брони</a> |
        <a href="@($"gosts/edit?gostid={gost.GostId}")">Редактировать</a> |
        <a href="@($"gosts/details?gostid={gost.GostId}")">Просмотр</a> |
        <a href="@($"gosts/delete?gostid={gost.GostId}")">Удалить</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private ApplicationDbContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
